# POS Inteligente Environment Variables
# Copy this file to .env and update with your actual values

# Database Configuration
POSTGRES_USER=pos_user
POSTGRES_PASSWORD=change_this_secure_password
POSTGRES_DB=pos_db

# Redis Configuration
REDIS_PASSWORD=change_this_redis_password

# JWT Configuration
JWT_SECRET=change_this_super_secret_jwt_key_in_production

# External Services
OPENAI_API_KEY=your_openai_api_key_here
MINISTRY_API_URL=https://api.hacienda.gob.sv
MINISTRY_API_KEY=your_ministry_api_key_here

# Feature Flags
ENABLE_VOICE_SEARCH=true
ENABLE_OFFLINE_MODE=true

# Admin Tools (optional)
PGADMIN_EMAIL=admin@pos.local
PGADMIN_PASSWORD=admin_password